{% extends 'visitorLayout.html.twig' %}

{% block title %}Historique de mes commandes{% endblock %}

{% block body %}

    <section class="account-history">
        <div class="jumbotron">
            <div class="container-fluid">
                <div class="justify-content-center">
                    <h1 class="text-center">Mes commandes</h1>
                    <h2 class="text-center">Bonjour {{ user.firstname }} {{ user.lastname }}</h2>
                </div>
            </div>
        </div>

        <div class="container">
            {% if purchases is empty %}
                <h3 class="text-center my-5">Vous n'avez passé aucune commande dernièrement</h3>
            {% else %}
                <h3 class="text-center my-5">Consultez mes commandes</h3>
                <table class="table table-hover mx-auto col-lg-10">
                    <thead>
                    <tr>
                        <th scope="col">Date de commande</th>
                        <th class="text-center">Nombre de produits</th>
                        <th class="text-center">Montant de la commande</th>
                        <th class="text-center">Date de livraison</th>
                        <th>Détails</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for purchase in purchases %}
                        <tr class="text-center align-content-center">
                            <td class="text-left">Le {{ purchase.orderDate|date("d/m/Y") }}
                                à {{ purchase.orderDate|date("H:i") }}</td>
                            <td class="text-center">{{ total.calculateTotalProductPurchase(purchase) }}</td>
                            <td class="text-center">{{ total.calculateTotalPurchase(purchase)|number_format(2) }} €</td>
                            <td class="text-center">{{ purchase.deliveryDate|date("d/m/Y") }}</td>
                            <td>
                                <a data-toggle="collapse" data-target="#collapse{{ purchase.id }}"
                                        aria-expanded="false"><i
                                            class="fa fa-info"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}

            <div class="row justify-content-center text-center">
                <a class="btn btn-outline m-3" href="{{ path('app_account') }}"
                   role="button">Revenir sur mon compte</a>
            </div>

        </div>
    </section>
{% endblock %}
