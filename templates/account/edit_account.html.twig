{% extends 'visitorLayout.html.twig' %}

{% block title %}Mon compte | Modifier | Ferme de la Voli√®re{% endblock %}

{% block body %}

    <section class="account-informations">
        <div class="jumbotron">
            <div class="container-fluid">
                <div class="justify-content-center">
                    <h1 class="text-center">Mon compte</h1>
                    <h2 class="text-center">Bonjour {{ user.firstname }} {{ user.lastname }}</h2>
                </div>
            </div>
        </div>

        <div class="container">
            <a class="btn-back btn mt-0" href="{{ path('app_account') }}"
               role="button"><i class="fas fa-chevron-left"></i> &nbsp; Revenir sur mon compte
            </a>
            <h3 class="text-center mb-5 mt-1">Modifiez vos informations</h3>
            <div class="card mx-auto">

                {{ form_start(form) }}
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-md-6">
                            {{ form_label(form.firstname) }}
                            {{ form_widget(form.firstname) }}
                        </div>
                        <div class="col-12 col-md-6">
                            {{ form_label(form.lastname) }}
                            {{ form_widget(form.lastname) }}
                        </div>
                    </div>
                    {{ form_label(form.phone) }}
                    {{ form_widget(form.phone) }}
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                </div>

                <div class="row justify-content-center">
                    <button class="btn btn-outline col-10 col-md-4 mb-3">Confirmez</button>
                </div>
                {{ form_end(form) }}
            </div>


        </div>

    </section>
{% endblock %}
