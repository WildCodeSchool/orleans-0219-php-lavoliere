{% extends 'base.html.twig' %}

{% block navbar %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="{{ path('app_index') }}">Retour au site</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="nav navbar-nav ml-auto text-right">
                <li class="nav-item {% if app.request.attributes.get("_route") == 'admin'%} active {% endif %}">
                    <a class="nav-link" href="{{ path('admin') }}">Accueil <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item {% if app.request.attributes.get("_route") == 'product_index'%} active {% endif %}">
                    <a class="nav-link" href="{{ path('product_index') }}">Produits</a>
                </li>
                <li class="nav-item {% if app.request.attributes.get("_route") == 'event_index'%} active {% endif %}">
                    <a class="nav-link" href="{{ path('event_index') }}">Évènements</a>
                </li>
                <li class="nav-item {% if app.request.attributes.get("_route") == 'category_index'%} active {% endif %}">
                    <a class="nav-link" href="{{ path('category_index') }}">Catégories</a>
                </li>
                <li class="nav-item {% if app.request.attributes.get("_route") == 'partner_index'%} active {% endif %}">
                    <a class="nav-link" href="{{ path('partner_index') }}">Partenaires</a>
                </li>
                <li class="nav-item {% if app.request.attributes.get("_route") == 'purchase_index'%} active {% endif %}">
                    <a class="nav-link" href="{{ path('purchase_index') }}">Commandes</a>
                </li>
                <li class="nav-item {% if app.request.attributes.get("_route") == 'user_view'%} active {% endif %}">
                    <a class="nav-link" href="{{ path('user_view') }}">Clients</a>
                </li>
                <li class="nav-item {% if app.request.attributes.get("_route") == 'calendar_index'%} active {% endif %}">
                    <a class="nav-link" href="{{ path('calendar_index') }}">Calendrier</a>
                </li>
            </ul>
        </div>
    </nav>
{% endblock %}

{% block adminFlashMessage %}

{% for message in app.flashes('admin-success') %}
    <div class="alert-admin alert-success mb-0 px-0 text-center">
        {{ message }}
    </div>
{% endfor %}

{% for message in app.flashes('admin-warning') %}
    <div class="alert-admin alert-danger mb-0 px-0 text-center">
        {{ message }}
    </div>
{% endfor %}

{% endblock %}

{% block footer %}{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}