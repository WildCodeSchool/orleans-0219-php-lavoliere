{% extends 'visitorLayout.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <section class="login">
        <div class="container my-3">

            <ul class="nav mb-4 justify-content-center my-5 pt-5">
                <li class="nav-item m-2">
                    <a class="nav-link active" href="{{ path('app_login') }}">Connexion</a>
                </li>
                <li class="nav-item m-2">
                    <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                </li>
            </ul>

            <h3 class="text-center my-4">Connexion</h3>

            <div class="card mx-auto">
                <form method="post">
                    <div class="card-body">
                        {% if error %}
                            <div class="alert alert-danger col-8">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        <label for="inputEmail" class="col-form-label">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                               class="form-control"
                               placeholder="email@gmail.com" required autofocus>

                        <label for="inputPassword" class="col-form-label">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control"
                               placeholder="Mot de passe"
                               required>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button class="btn btn-outline mt-4" type="submit">Se connecter</button>

                        <div class="checkbox mt-3 text-center">
                            <label>
                                <input type="checkbox" name="_remember_me"> Se rappeler de moi
                            </label>
                        </div>
                    </div>
                </form>
                <a class="text-center mb-2" href="{{ path('reset_password_request') }}">Mot de passe oubli√© ?</a>
            </div>
        </div>
    </section>
{% endblock %}
