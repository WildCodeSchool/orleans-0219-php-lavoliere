{% extends 'adminLayout.html.twig' %}

{% block title %}Editer une recette{% endblock %}

{% block body %}
    <section>
        <div class="my-5 container">
            <h1 class="admin-h1 my-5 text-center">Edition de la recette "{{ recipe.name }}"</h1>

            {{ form_start(form) }}
            <div class="row justify-content-center mx-auto">
                <div class="col-12 col-md-5 my-1">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                </div>
                <div class="col-12 col-md-5 my-1">
                    {{ form_label(form.url) }}
                    {{ form_widget(form.url) }}
                </div>
            </div>

            <div class="row justify-content-center my-4">
                <div class="col-12 col-md-4 mr-4 mr-md-0 text-center">
                    {{ form_widget(form.isPresent) }}
                </div>
            </div>
            <div class="text-center">
                <button class="btn btn-add px-4 my-4 mx-5">{{ button_label|default('Modifier') }}</button>
            </div>
            {{ form_end(form) }}

            <div class="text-center">
                <a class="btn btn-admin px-4" href="{{ path('recipe_index') }}"
                   role="button">Retour Ã  la liste des recettes</a>
            </div>
        </div>
    </section>
{% endblock %}
