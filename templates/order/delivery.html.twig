{% extends 'visitorLayout.html.twig' %}

{% block title %}Ferme de la Volière - Validation du point de livraison{% endblock %}

{% block body %}
    <section class="shopping-delivery">
        <div class="container justify-content-center text-center">
            <h1 class="mt-5 pt-5">Choisir mon lieu de livraison</h1>
            <div class="text-center btn-collapse-cart cart-extend">
                <div class="cart-resume">
                    <p class="my-5">Votre panier contient X produits pour un total de X €</p>
                </div>
                <button class="btn btn-outline cart-extend" data-toggle="collapse"
                        data-target="#collapseCart"
                        aria-expanded="false" aria-controls="collapseContact">Détail du panier
                </button>
            </div>
            <hr>
            <div class="collapse" id="collapseCart">
                <table class="table-sm w-50 mx-auto">
                    <thead>
                    <tr class="text-center table-custom">
                        <th scope="col">Produits</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Quantité</th>
                        <th scope="col">Total</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product, detail in cart %}
                        <tr class="text-center">
                            <td>{{ detail.product.name }}</td>
                            <td>{{ detail.product.price|number_format(2) }} €</td>
                            <td>{{ detail.quantity }}</td>
                            <td>{{ detail.product.price|number_format(2) }} €</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <button class="btn btn-outline mt-3 mb-1">Modifier mon panier</button>
                <hr>
            </div>
            <div class="delivery-section">
                <h3>Mes informations</h3>
                <div class="my-4">
                    <p>Cette commande sera disponible au nom de {{ user.firstname }} {{ user.lastname }}</p>
                    <p>Si un changement doit intervenir sur votre commande, un mail vous sera envoyé
                        à l'adresse {{ user.email }}</p>
                </div>
                <div>
                </div>
            </div>
            <div class="row justify-content-center text-center">
                <button class="btn btn-outline-back m-3">Continuer les achats</button>
                <button class="btn btn-outline m-3">Valider la commande</button>
            </div>
        </div>
    </section>
{% endblock %}
