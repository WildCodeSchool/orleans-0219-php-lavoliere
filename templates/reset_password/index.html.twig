{% extends 'visitorLayout.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}

    <section class="forgotten-password my-5">
        <div class="container my-5">
            <h3 class="text-center display-4 pt-4 my-4">Réinitialiser mon mot de passe</h3>
            <h4 class="text-center my-4">Un mail vous sera envoyé afin de réinitialiser votre mot de passe</h4>

            {{ form_start(form) }}
            <div class="row justify-content-center mx-5">
                {{ form_label(form.email) }}
                <div class="col-md-8 my-1">
                {{ form_widget(form.email) }}
                </div>
            {{ form_end(form) }}
            <p class="col-10 mt-3"><span class="required"></span>Champ obligatoire </p>
            <button class="btn btn-outline my-5 col-10 col-md-3 mx-auto">Envoyer</button>
            </div>
        </div>
    </section>

{% endblock %}
