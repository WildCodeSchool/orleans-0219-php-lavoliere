{{ form_start(form) }}
<div class="justify-content-center mx-auto">
    <div class="row justify-content-center mx-auto">
        <div class="col-12 col-md-6 my-1">
            {{ form_label(form.product) }}
            {{ form_widget(form.product) }}
        </div>
    </div>
    <div class="row justify-content-center mx-auto">
        <div class="col-12 col-sm-3 my-1">
            {{ form_label(form.seasonStartAt) }}
            {{ form_widget(form.seasonStartAt) }}
        </div>
        <div class="col-12 col-sm-3 my-1">
            {{ form_label(form.seasonEndAt) }}
            {{ form_widget(form.seasonEndAt) }}
        </div>
    </div>
    <div class="row justify-content-center mx-auto">
        <div class="col-12 col-sm-3 my-1">
            {{ form_label(form.pickingStartAt) }}
            {{ form_widget(form.pickingStartAt) }}
        </div>
        <div class="col-12 col-sm-3 my-1">
            {{ form_label(form.pickingEndAt) }}
            {{ form_widget(form.pickingEndAt) }}
        </div>
    </div>
</div>

<div class="row justify-content-center my-4">
    <div class="col-4 text-center">
        {{ form_widget(form.outOfStock) }}
    </div>
</div>
<div class="text-center">
    <button class="btn btn-add px-4 my-4 mx-5">{{ button_label|default('Ajouter') }}</button>
</div>
{{ form_end(form) }}