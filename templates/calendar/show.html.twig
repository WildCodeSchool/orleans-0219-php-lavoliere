{% extends 'base.html.twig' %}

{% block title %}Calendar{% endblock %}

{% block body %}
    <h1>Calendar</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ calendar.id }}</td>
            </tr>
            <tr>
                <th>Product</th>
                <td>{{ calendar.Product }}</td>
            </tr>
            <tr>
                <th>SeasonStartAt</th>
                <td>{{ calendar.seasonStartAt ? calendar.seasonStartAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>SeasonEndAt</th>
                <td>{{ calendar.seasonEndAt ? calendar.seasonEndAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>PickingStartAt</th>
                <td>{{ calendar.pickingStartAt ? calendar.pickingStartAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>PickingEndAt</th>
                <td>{{ calendar.pickingEndAt ? calendar.pickingEndAt|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Available</th>
                <td>{{ calendar.outOfStock ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('calendar_index') }}">back to list</a>

    <a href="{{ path('calendar_edit', {'id': calendar.id}) }}">edit</a>

    {{ include('calendar/_delete_form.html.twig') }}
{% endblock %}
