{% extends 'adminLayout.html.twig' %}

{% block title %}Gestion des categories{% endblock %}

{% block body %}
    <h1 class="text-center my-5">Gestion des cat√©gories</h1>
<div class="container-fluid">
    <table class="table table-hover mx-auto col-lg-8">
        <thead>
            <tr>
                <th class="col-10">Nom</th>
                <th class="col-1 mx-auto">Editer</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td class="text-center">
                    <a href="{{ path('category_edit', {'id': category.id}) }}">
                        <img src=" {{ asset('build/icon_edit.png') }}" alt="logo editer">
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
