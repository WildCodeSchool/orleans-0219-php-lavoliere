{% extends 'adminLayout.html.twig' %}

{% block title %}Gestion des catégories{% endblock %}

{% block body %}
    <h1 class="text-center my-5 admin-h1">Gestion des catégories</h1>
<div class="container-fluid">
    <table class="table table-hover mx-auto col-lg-8">
        <thead>
            <tr>
                <th class="col-10">Nom</th>
                <th class="col-1 mx-auto">Editer</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td class="text-center">
                    <a href="{{ path('category_edit', {'id': category.id}) }}">
                        <img src=" {{ asset('build/icon_edit.png') }}" alt="logo editer">
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune catégorie</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <h2 class="admin-h2 mt-5 mb-0 text-center admin-category">Ajouter une catégorie :</h2>
    {{ include('category/_form.html.twig') }}
</div>
{% endblock %}
