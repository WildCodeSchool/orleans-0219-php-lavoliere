{% extends 'visitorLayout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.rawgit.com/openlayers/openlayers.github.io/master/en/v5.3.0/css/ol.css"
          type="text/css">
    {{ parent() }}
{% endblock %}

{% block title %}Ferme de la Volière{% endblock %}

{% block body %}

    <header>
        <div>
            <h1 class="text-center title-wrapper">Ferme de la Volière</h1>
            <p class=" text-center p-title-wrapper"> Vente en ligne / Cueillette à la ferme</p>
        </div>
        <div>
            <img src="{{ asset('build/image_header.jpg') }}" alt="Image d'accueil de la Ferme de la Volière">
        </div>
        <div class="text-center">
            <a class="btn btn-header" href="#"
               role="button">Commandez nos produits
            </a>
        </div>
        <div class="header-arrow">
            <a href="#"></a>
        </div>
    </header>

    {#    --------------- OUR PRODUCTS SECTION ---------------#}

    <section class="showcased-products">
        <div class="container-fluid">

            <h2 class="text-center pt-3 mb-5">Nos produits</h2>

            <div class="row justify-content-center">

                <ul class="nav nav-pills mb-4 text-center justify-content-center" id="pills-tab" role="tablist">
                    <li class="nav-item mr-4 mb-3">
                        <a class="nav-link active" id="pills-home-tab" data-toggle="pill"
                           href="#pills-showcased-products"
                           role="tab"
                           aria-controls="pills-home" aria-selected="true">Tops du moment</a>
                    </li>
                    <li class="nav-item mr-4 mb-3">
                        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-harvest" role="tab"
                           aria-controls="pills-profile" aria-selected="false">Calendrier des cueillettes</a>
                    </li>
                </ul>

            </div>

            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show active" id="pills-showcased-products" role="tabpanel"
                     aria-labelledby="pills-showcased-products-tab">
                    <div class="row justify-content-center">

                        {% for product in productsShowcased %}
                            <div class="card text-center mb-3 mx-4">
                                <img src="{{ product.picture }}" class="card-img-top" alt="{{ product.name }}">
                                <div class="card-body">
                                    <h5 class="card-title">{{ product.name }}</h5>
                                    <p class="card-text">
                                        {% if product.description|length > 60 %}{{ product.description [:60] ~ '[...]' }}
                                        {% else %} {{ product.description }}
                                        {% endif %}</p>
                                    <p class="card-text mb-0"><span class="bold-text">Lot: </span>{{ product.bundle }}
                                    </p>
                                    <p class="card-text"><span class="bold-text">Origine: </span>{{ product.origin }}
                                    </p>
                                    <p class="card-text price">{{ product.price }}€</p>
                                    <a href="#" class="btn btn-outline-danger">Commandez</a>
                                </div>
                            </div>
                        {% endfor %}

                    </div>
                </div>

                <div class="tab-pane fade" id="pills-harvest" role="tabpanel" aria-labelledby="pills-harvest-tab">
                    {#      Calendrier de récoltes      #}
                </div>
            </div>

            <a href="#" class="badge badge-dark">Tous nos produits</a>
        </div>
    </section>

    {#    --------------- END OUR PRODUCTS SECTION ---------------#}

    {#    ------------------ CONTACT US SECTION --------------#}

    <div class="section contact-us">
        <div class="container-fluid py-5">
            <h2 class="text-center pt-3 mb-5">Nous trouver</h2>

            <div class="row address-hours justify-content-center align-items-center">

                <div id="map" class="map col-12 col-lg-3 ml-5 mr-5 mr-lg-0 mb-5">
                    <div id="popup"></div>
                </div>

                <div class="col-12 col-md-4 col-lg-3 mb-2 ml-0 ml-lg-5">
                    <h4 class="mb-1 mt-3">Horaires</h4>

                    <p>8h30-12h30 / 14h-19h (sauf mardi)</p>
                    <p>Fermé les dimanches du 1er novembre au 1er avril</p>
                    <p>Ferme le dimanche 24 décembre à 17h</p>
                    <p>Fermé du 25 décembre au 1er janvier</p>
                </div>

                <address class="col-12 col-md-4 col-lg-3 ml-0 ml-lg-3">
                    <p>
                        <i class="fas fa-map-marker-alt"></i>
                        Ferme de la Volière<br>
                        <span>181 rue de Malvoviers</span><br>
                        <span>45520 Gidy</span>
                    </p>
                    <p><i class="fas fa-phone"></i>
                        Tél. : 06 63 76 75 63
                    </p>
                    <p><i class="fas fa-at"></i>
                        info@lavoliere.info
                    </p>
                </address>

            </div>
            <div class="header-arrow">
                <a href="#"></a>
            </div>
        </div>
    </div>


    {#    ------------------ END CONTACT US SECTION --------------#}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://kit.fontawesome.com/0499915d2e.js"></script>
    <script src="https://cdn.rawgit.com/openlayers/openlayers.github.io/master/en/v5.3.0/build/ol.js"></script>
    {{ encore_entry_script_tags('index') }}
{% endblock %}